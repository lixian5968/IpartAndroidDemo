<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:id="@+id/homepart_item_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/red"
                    android:id="@+id/homepart_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="100"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/homepart_item_user"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@color/red"
                            android:id="@+id/homepart_item_name"
                            android:textSize="18dp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                        <TextView
                            android:textColor="@color/red"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/homepart_item_loveUser"
                            android:id="@+id/homepart_item_time"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/homepart_item_loveUser"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="70dp"
                            android:layout_height="40dp">

                            <ImageView
                                android:src="@drawable/icon"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />
                            <TextView
                                android:textColor="@color/red"
                                android:id="@+id/homepart_item_loveUserCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        

                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

        </FrameLayout>


        <RelativeLayout
            android:id="@+id/home_fragment_joined_users_all"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/home_fragment_dqjr"
                android:layout_centerVertical="true"
                android:text="当前加入:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <HorizontalScrollView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/home_fragment_dqjr"
                android:layout_width="match_parent"
                android:layout_height="match_parent">\

                <LinearLayout
                    android:id="@+id/home_fragment_joined_users"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>



            </HorizontalScrollView>


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>